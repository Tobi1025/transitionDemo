<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qiaojingfei.transitionanimationdemo.MainActivity">

    <ImageView
        android:id="@+id/iv_cover_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/anim3" />
    <Button
        android:id="@+id/btn_jump"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_cover_image"
        android:text="@string/jump_to_next_page"/>
</RelativeLayout>
